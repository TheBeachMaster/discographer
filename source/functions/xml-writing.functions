function indent()
{
	indentation="${indentation}${tab}"
}

function undent()
{
	indentation="${indentation:0:${#indentation}-1}"
}

function xml_indented()
{
	echo "${indentation}$1"
}

function xml_version()
{
	echo '<?xml version="1.0"?>'
}

function xml_start()
{
	indented "<${1}>"
	indent
}

function xml_end()
{
	undent
	indented "</${1}>"
}

function xml_selfclose()
{
	indented "<${1}/>"
}

function xml_value()
{
	indented "<${1}>${2}</<${1}>"
}
