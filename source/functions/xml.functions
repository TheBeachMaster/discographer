function xml_indent()
{
	indentation="${indentation}${tab}"
}

function xml_undent()
{
	indentation="${indentation:0:${#indentation}-1}"
}

function xml_indented()
{
	echo "${indentation}$1"
}

function xml_version()
{
	echo '<?xml version="1.0"?>'
}

function xml_start()
{
	xml_indented "<${1}>"
	xml_indent
}

function xml_end()
{
	xml_undent
	xml_indented "</${1}>"
}

function xml_selfclose()
{
	xml_indented "<${1}/>"
}

function xml_value()
{
	xml_indented "<${1}>${2}</<${1}>"
}
