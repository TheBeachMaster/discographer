ourOverlayPath="$cacheMachineOverlaysGeneratedPath"/fstab

mkdir -m 0755 -p "$ourOverlayPath"

fstabFile="$ourOverlayPath"/fstab
for disk in "${machineDiskMountPointsInForwardDiskOrder[@]}"
do
	echo UUID=${machineDisksConfigurationUuid["$disk"]} ${machineDisksConfigurationMountPoint["$disk"]}  ${machineDisksConfigurationFilesystemType["$disk"]} ${machineDisksConfigurationMountOptions["$disk"]} ${machineDisksConfigurationDumpOptions["$disk"]} ${machineDisksConfigurationDumpOptions["$disk"]} >>"$fstabFile"
done

cat >>"$fstabFile" <<-EOF
	tmpfs /dev/shm tmpfs defaults 0 0
	devpts /dev/pts devpts gid=5,mode=620  0 0
	sysfs /sys sysfs defaults 0 0
	proc /proc proc defaults 0 0
EOF
