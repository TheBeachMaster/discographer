
mkdir -m 0755 -p "$generatedRootOverlaysPath"/etc

cat >"$generatedRootOverlaysPath"/etc/hosts <<-EOF
	127.0.0.1	localhost localhost.localdomain ${machine}
	::1	localhost6 localhost6.localdomain6 ${machine}
	fe80::1%lo0	localhost6 localhost6.localdomain6 ${machine}
	255.255.255.255	broadcasthost
EOF
